  <%= link_to '投稿', new_collection_path %>
<% @collection.each do |collection| %>
  <% if collection.user_id == current_user.id %>
    <div class="container">
      <div class="row">
        <div class="col-3">
          <div class="card" style="width: 18rem;">
            <%= image_tag collection.image.url , class: 'card-img-top' %>
            <div class="card-body">
              <h5 class="card-title"><%= collection.name %></h5>
              <p class="card-text"><%= collection.explanation %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
