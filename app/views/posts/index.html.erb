<%# 後でBootstrapを使用した書き方に変更する %>
<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
    <td scope="col"><%= link_to "新規投稿", new_post_path %></td>
    </tr>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タイトル</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each.with_index(1) do |post, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= post.image %></td>
        <td><%= post.content %></td>
        <td>
          <%= link_to "詳細", post %>
          <%= link_to "編集", edit_post_path(post) %>
          <%= link_to "削除", post, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>